# WARNING: This is an example file only. Do not commit actual secrets to version control.
# Copy this file to .env and fill in your actual values.

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/todo_db

# JWT Configuration - Change this to a strong random secret in production
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# OpenAI API Key (optional) - Leave empty if not using OpenAI
OPENAI_API_KEY=

# Environment
ENVIRONMENT=development

# Debug Mode
DEBUG=True

# NeonDB Configuration (optional)
NEON_DATABASE_URL=

# Additional security settings
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_HOURS=24
